					<div class="form-group">
						<% if(plantas){%>
						<select  name="planta" class="selectpicker" data-width="100%" multiple title="Selecione suas plantas" required>
							
							<%	for(i = 0; i < plantas.length; i++){ %>
							<option value="<%- plantas[i].id %>"><%- plantas[i].grupo %> - <%- plantas[i].nome%></option>
							<%}%>
							<%}else{%>
							<select  name="planta" class="selectpicker" data-width="100%" multiple title="Plantas não localizadas" required>
							<%}%>	
						</select>
					</div>
				--> 	
			</div>
			<div class="col-xs-12 col-md-3 "></div>
		</div>
		<div class="row espaco">	
			<div class="col-xs-12 col-md-3 "></div>
			<div class="col-xs-12 col-md-3">
				<div class="form-group">
					<input type="submit" name="cadastrar" class="btn btn-success" value="Alterar">
					<a href="/home" name="voltar" class="btn btn-default">Voltar</a>
				</div>
			</div>
			<div class="col-xs-12 col-md-3 "></div>
			<div class="col-xs-12 col-md-3 "></div>
		</div>

	</div>

	<%}%>
</div>

