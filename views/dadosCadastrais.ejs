<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>iOne Jardim Inteligente - Dados Cadastrais</title>

	<!-- Bootstrap core CSS -->
	<link href="./css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="./css/bootstrap-theme.min.css"/>
	<link href="./css/signin.css" rel="stylesheet">
	<script src="./js/script.js"></script>

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->
      <script type="text/javascript">
        function habilitar(){
          document.getElementById('nome').readOnly = !document.getElementById('nome').readOnly;
          document.getElementById('sobrenome').readOnly = !document.getElementById('sobrenome').readOnly;
          document.getElementById('pais').disabled = !document.getElementById('pais').disabled;
          document.getElementById('estado').disabled = !document.getElementById('estado').disabled;
          document.getElementById('cidade').disabled = !document.getElementById('cidade').disabled;
          document.getElementById('nascimento').readOnly = !document.getElementById('nascimento').readOnly;
          document.getElementById('confirmar').disabled = !document.getElementById('confirmar').disabled;

          document.getElementById('editar').disabled = !document.getElementById('editar').disabled;        
          
        }
      </script>
    </head>

    <body>
    <nav class="navbar navbar-inverse">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">iOne Jardim Inteligente</a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
     
    </div><!-- /.container-fluid -->
  </nav>

     <!-- Continuação do formulario Cadastrar-->
     <div class="container">
      <div class="row">
       <form name="cadastro" class="form-signin" method="#">
        
        <h4 class="form-signin-heading">Dados cadastrais</h4>

        <input id="nome"      name="nome"      type="text" placeholder="Nome" class="form-control" required readonly> <br>
        
        <input id="sobrenome" name="sobrenome" type="text" placeholder="Sobrenome" class="form-control" required readonly><br>

        <input id="email"     name="email"       type="text" placeholder="E-mail" class="form-control" required readonly><br>
        
        <select id="pais" name="pais" type="select" placeholder="País" class="form-control" required disabled="true">
          <option value="1">Brasil</option>   
        </select><br>

        <select id="estado" name="estado" type="select" placeholder="Estado" class="form-control" required disabled="true">
         <option value="1">SP</option>
         <option value="2">RJ</option>
       </select><br>

       <select id="cidade" name="cidade" type="select" placeholder="Cidade" class="form-control" required disabled="true">
         <option value="1">São Paulo</option>
       </select><br>

       <input id="nascimento" name="nascimento" type="date" placeholder="Nascimento" class="form-control" required readonly>
       <br>

       <input type="button" id="editar" class="btn btn-block btn-primary" value="Editar" onclick="habilitar()" /> 
       <input type="submit" id="confirmar" class="btn btn-block btn-primary" value="Salvar" disabled="true"> 
       <input type="button" class="btn btn-block btn-primary" value="Cancelar" onclick="window.location='/main'"> 

     </div>
   </form>
 </div>
</div>

</body>
</html>
