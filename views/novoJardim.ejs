<!DOCTYPE html>
<html lang="pt-BR">
<head>
	<meta charset="utf-8">
	<title>iOne</title>

      <!-- jQuery (necessary for Bootstrap'<s></s> JavaScript plugins) -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
      <!-- Include all compiled plugins (below), or include individual files as needed -->
      <script src="js/bootstrap.min.js"></script>
      <script src="js/bootstrap-select.min.js"></script>

      <!-- Bootstrap -->
      <link href="css/bootstrap.min.css" rel="stylesheet">
      <link href="css/bootstrap-select.min.css" rel="stylesheet">

      <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
      <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
      <![endif]-->

      

      <link rel="stylesheet" type="text/css" href="../css/style.css">
      <link rel="stylesheet" type="text/css" href="../css/fonts.css">
      <!--<link href="https://fonts.googleapis.com/css?family=Baloo+Paaji" rel="stylesheet"> -->

      <body>

      	<div class="container">
      		<div class="header">
      			<h1>iOne Jardim Inteligente</h1>
      			<h2>criar novo jardim</h2>
      		</div>

                <div class="formulario">

                     <div class="row">
                          <div class="col-xs-12 col-md-4"></div>
                          <div class="col-xs-12 col-md-4">
                               <form method="post" action="novoJardim">
                                    <fieldset>
                                         <legend>detalhes do jardim</legend>
                                         <div class="form-group">
                                              <input  class="form-control" type="text" name="nome" placeholder="nome do seu jardim">
                                        </div>
                                        <div class="form-group">

                                             <select  class="selectpicker" data-width="100%" name="planta" multiple title="selecione suas plantas" >

                                                   <% if(plantas.length > 0){%>
                                                   <%	for(i = 0; i < plantas.length; i++){ %>
                                                   <option value="<%= plantas[i].id %>"><%= plantas[i].nome_planta %></option>
                                                   <%}%>
                                                   <%}%>

                                             </select>
                                       </div>
                                       <div class="form-group">
                                             <select  class="selectpicker"  data-width="100%" name="sensor" multiple title="sensores de umidade">
                                               <% if(sensor.length > 0){%>
                                               <% for(i = 0; i < sensor.length; i++){ %>
                                               <option value="<%= sensor[i].id %>"><%= sensor[i].nome_sensor %></option>
                                               <%}%>
                                               <%}%>
                                         </select>
                                   </div>
                                   <div class="form-group">
                                      <select  class="selectpicker"  data-width="100%" name="valvula" title="valvula de água">
                                         <% if(valvula.length > 0){%>
                                         <%    for(i = 0; i < valvula.length; i++){ %>
                                         <option value="<%= valvula[i].id %>"><%= valvula[i].descricao_valvula %></option>
                                         <%}%>
                                         <%}%>
                                   </select>
                             </div>
                             <div class="form-group">
                                 <select  class="selectpicker"  data-width="100%" name="agua" title="sensor de fluxo de água">
                                  <% if(agua.length > 0){%>
                                  <%    for(i = 0; i < agua.length; i++){ %>
                                  <option value="<%= valvula[i].id %>"><%= agua[i].descricao_agua %></option>
                                  <%}%>
                                  <%}%>
                            </select>
                      </div>
                </fieldset>
                <fieldset>
                   <legend>localização</legend>
                   <div class="form-group">
                    <label>país</label>
                    <select  class="form-control" name="pais">
                     <option></option>
                     <option value="Brazil">brasil</option>
               </select>
         </div>
         <div class="form-group">
              <label>estado</label>
              <select  class="form-control" name="estado">
               <option></option>
               <option value="São Paulo">são paulo</option>
         </select>
   </div>
   <div class="form-group">
        <label>cidade</label>
        <select  class="form-control" name="cidade">
         <option></option>
         <option value="São Paulo">são paulo</option>
   </select>
</div>
</fieldset>
<div class="form-group">
 <button id="botao" class="btn btn-default" type="submit"  class="btn btn-default">criar</button>
 <a id="botao" class="btn btn-default" onclick="window.history.go(-1)">voltar</a>

</form>
</div>
<div class="col-xs-12 col-md-4"></div>
</div>
</div>
</div>

</body>
</html>