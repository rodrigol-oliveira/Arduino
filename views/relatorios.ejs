      <script>
         function mostrar_opcao(obj) {
            document.getElementById('periodo').style.display= "none";
            switch (obj.value) {
               case '1':
               document.getElementById('periodo').style.display= "none";
               break
               case '2':
               document.getElementById('periodo').style.display= "block";
               break
               case '3':
               document.getElementById('periodo').style.display= "block";
               break
               case '4':
               document.getElementById('periodo').style.display= "block";
               break
            }
         }
      </script>

      <script>
         /* Javascript */
         $('#dataInicio').focus(function(){
            $(this).calendario({
               target:'#dataInicio'
            });
         });
      </script>

      <script>
         function Submit(obj){

            switch (obj.value) {
               case '1':
               document.forms[0].action = '/selectPlantas'
               break
               case '2':
               document.forms[0].action = '/selectUmidade'
               break
               case '3':
               document.forms[0].action = '/selectConsumo'
               break
               case '4':
               document.forms[0].action = '/selectCompleto'
               break

            }

            document.forms[0].submit();

         }

      </script>


   </head>


   <body>

     <div class="container">

      <div class="header">
         <h1>iOne Jardim Inteligente</h1>
         <h2>relatorio detalhado</h2>
      </div>


      <div class="formulario">
         <div class="rows">
            <div class="col-xs-12 col-md-4"></div>
            <div class="col-xs-12 col-md-4">
               <form class="form" method="post">
                  <div class="form-group">

                     <label>pesquisa</label>
                     <select  class="form-control" id="select">
                        <option ></option>
                        <option value="1" onclick="mostrar_opcao(this);">plantas</option>
                        <option value="2" onclick="mostrar_opcao(this);">umidade do solo</option>
                        <option value="3" onclick="mostrar_opcao(this);">consumo de água</option>
                        <option value="4" onclick="mostrar_opcao(this);">relatorio completo</option>
                     </select>          

                  </div>  

                  <div id="periodo" class="form-group" style="display:none;"">
                     <label for="dataInicio">início</label>
                     <input class="form-control" type="text" id="dataInicio">
                     <script type="text/javascript">
                        $(function () {
                           $("#dataInicio").datetimepicker();
                        });
                     </script>
                     <label for="dataFim">término</label>
                     <input class="form-control" type="text" nome="dataFim" id="dataFim">
                     <script type="text/javascript">
                        $(function () {
                          $('#dataFim').datetimepicker();
                       });
                     </script>
                  </div>      




                  <div class="form-group">
                     <a class="btn btn-default" onclick="Submit(document.getElementById('select'));" type="submit">pesquisar</a>
                     <a  class="btn btn-default" onclick="window.history.go(-1)">voltar</a>
                  </div>   
               </form>
            </div>
            <div class="col-xs-12 col-md-4"></div>
         </div>
      </div>    

   </div>

